# File Managed by Puppet

mode server
port <%= @port %>
proto <%= @real_proto %>
dev <%= @dev %>


keepalive 10 60
inactive 0
persist-tun
persist-key

<% if @server != '' %>server <%= @server %><% end -%> 

<% if @real_auth_type == "key" -%>
secret <%= scope.lookupvar("openvpn::config_dir") %>/<%= @name %>.key 
<% end -%>

<% if @real_auth_type == "tls" -%>
tls-server
ca <%= scope.lookupvar("openvpn::config_dir") %>/<%= @name %>/pki/ca.crt
cert <%= scope.lookupvar("openvpn::config_dir") %>/<%= @name %>/pki/<%= scope.lookupvar("::fqdn") %>.crt
key <%= scope.lookupvar("openvpn::config_dir") %>/<%= @name %>/pki/<%= scope.lookupvar("::fqdn") %>.key
dh <%= scope.lookupvar("openvpn::config_dir") %>/<%= @name %>/pki/dh<%= @easyrsa_key_size %>.pem
<% end -%>

user <%= scope.lookupvar("openvpn::process_user") %>
group <%= scope.lookupvar("openvpn::process_group") %>

client-config-dir <%= scope.lookupvar("openvpn::config_dir") %>/<%= @name %>/ccd
ccd-exclusive

<% @route.each do |route_entry| -%>
route <%= route_entry %>
<% end -%>

<% @push.each do |push_entry| -%>
push "<%= push_entry %>"
<% end -%>

comp-lzo # Compress data
push "comp-lzo yes"
